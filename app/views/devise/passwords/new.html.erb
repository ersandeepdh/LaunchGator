<h1>Forgot your password?</h1><br/>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <p>
  	<%= f.label :email, 'Email Address' %>
  </p>
  <p>
  	<%= f.text_field :email, :autofocus => true,:class=>"txt_small", :required => true %>
  </p>

   <p class="actions">
    <%= f.submit "Reset",:class=>"greenbutton" %>
  </p>
  <p class="sessiontext">You will get an email on the registered email address with the passowrd instructions</p>
<% end %>


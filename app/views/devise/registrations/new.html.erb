<h1>Create Your Account</h1><br/>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   	<p>
		<%= f.label :full_name %>
	</p>		
	<p>
		<%= f.text_field :full_name,:class=>"txt_small" %>
	</p>

  <p><%= f.label :email, 'Email Address' %></p>
  <p><%= f.text_field :email, :autofocus => true,:class=>"txt_small" %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password,:class=>"txt_small" %></p>

  <p><%= f.label :password_confirmation %></p>
  <p><%= f.password_field :password_confirmation,:class=>"txt_small" %></p>

  <p class="actions">
  <%= f.submit "Sign up",:class=>"greenbutton"  %>
</p>
<% end %>
